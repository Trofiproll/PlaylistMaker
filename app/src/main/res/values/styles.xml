<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_activity_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/main_menu_text</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_menu_icon_padding</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="cornerRadius">@dimen/main_menu_button_radius</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="settings_items_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="switch_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:trackTint">#E6E8EB</item>
        <item name="android:thumbTint">#AEAFB4</item>
    </style>

    <style name="search_bar_text_color">
        <item name="android:tint">@color/YP_Text_Gray</item>
        <item name="android:textColorHint">@color/YP_Text_Gray</item>
        <item name="android:textColor">@color/YP_Black</item>
    </style>

    <style name="search_song_name">
        <item name="android:textSize">@dimen/settings_menu_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="search_artist_name">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/YP_Text_Gray</item>
        <item name="android:maxLines">1</item>
        <item name="tint">@color/YP_Text_Gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="search_placeholder_text">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="search_placeholder_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>

    <style name="search_nothing_found_image">
        <item name="android:src">@drawable/nothing_found_light</item>
    </style>

    <style name="search_error_image">
        <item name="android:src">@drawable/error_light</item>
    </style>

    <style name="search_error_button" parent="Widget.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:backgroundTint">@color/YP_Black</item>
    </style>
</resources>