<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary">



    <ImageButton
        android:id="@+id/player_backButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <ImageView
        android:id="@+id/player_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/leftBorder24"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="82dp"
        app:layout_constraintDimensionRatio="h, 1:1"
        tools:srcCompat="@drawable/musiclogo"/>

    <TextView
        android:id="@+id/player_trackName"
        style="@style/search_song_name"
        android:textSize="24sp"
        tools:text="Yesterday (Remastered 2009)"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/player_cover"
        app:layout_constraintStart_toStartOf="@id/leftBorder24"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/player_artistName"
        style="@style/search_song_name"
        android:textSize="14sp"
        tools:text="The Beatles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/player_trackName"
        app:layout_constraintStart_toStartOf="@id/leftBorder24"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:id="@+id/plus_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="51dp"
        android:layout_height="51dp"
        app:layout_constraintStart_toStartOf="@id/leftBorder24"
        app:layout_constraintEnd_toStartOf="@id/play_button"
        app:layout_constraintTop_toBottomOf="@id/player_artistName"
        android:layout_marginTop="54dp"
        app:srcCompat="@drawable/plus_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />

    <ImageButton
        android:id="@+id/play_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:layout_constraintStart_toEndOf="@id/plus_button"
        app:layout_constraintEnd_toStartOf="@id/like_button"
        app:layout_constraintTop_toBottomOf="@id/player_artistName"
        android:layout_marginTop="38dp"
        app:srcCompat="@drawable/play_button"
        />

    <ImageButton
        android:id="@+id/like_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="51dp"
        android:layout_height="51dp"
        app:layout_constraintStart_toEndOf="@id/play_button"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24"
        app:layout_constraintTop_toBottomOf="@id/player_artistName"
        android:layout_marginTop="54dp"
        app:srcCompat="@drawable/like_button"
        />

    <TextView
        android:id="@+id/cur_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/play_button"
        app:layout_constraintStart_toEndOf="@id/leftBorder24"
        app:layout_constraintEnd_toStartOf="@id/rightBorder24"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="0.5"
        tools:text="0:30"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="14sp"
        android:fontFamily="@font/ys_display_regular"
        android:textFontWeight="500"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/s_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_tags="s1, s2, s3, s4, s5"
        app:barrierDirection="end" />
    <TextView
        android:id="@+id/dlitelnost"
        app:layout_constraintTag="s1"
        style="@style/track_properties_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cur_time"
        app:layout_constraintStart_toEndOf="@id/leftBorder16"
        android:layout_marginTop="32dp"
        android:text="Длительность"/>
    <TextView
        android:id="@+id/duration"
        style="@style/track_properties_text1"
        app:layout_constraintBaseline_toBaselineOf="@id/dlitelnost"
        app:layout_constraintEnd_toStartOf="@id/rightBorder16"
        app:layout_constraintStart_toEndOf="@id/s_barrier"
        tools:text="5:35"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/collection_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="albom,collection"/>
    
    <TextView
        android:id="@+id/albom"
        app:layout_constraintTag="s2"
        style="@style/track_properties_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dlitelnost"
        app:layout_constraintStart_toEndOf="@id/leftBorder16"
        android:text="Альбом"/>
    <TextView
        android:id="@+id/collection"
        style="@style/track_properties_text1"
        app:layout_constraintBaseline_toBaselineOf="@id/albom"
        app:layout_constraintEnd_toStartOf="@id/rightBorder16"
        app:layout_constraintStart_toEndOf="@id/s_barrier"
        tools:text="Yesterday (Remastered 2009)"/>

    <TextView
        android:id="@+id/god"
        app:layout_constraintTag="s3"
        style="@style/track_properties_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/albom"
        app:layout_constraintStart_toEndOf="@id/leftBorder16"
        android:text="Год"/>
    <TextView
        android:id="@+id/date"
        style="@style/track_properties_text1"
        app:layout_constraintBaseline_toBaselineOf="@id/god"
        app:layout_constraintEnd_toStartOf="@id/rightBorder16"
        app:layout_constraintStart_toEndOf="@id/s_barrier"
        tools:text="1965"/>

    <TextView
        android:id="@+id/janr"
        app:layout_constraintTag="s4"
        style="@style/track_properties_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/god"
        app:layout_constraintStart_toEndOf="@id/leftBorder16"
        android:text="Жанр"/>
    <TextView
        android:id="@+id/genre"
        style="@style/track_properties_text1"
        app:layout_constraintBaseline_toBaselineOf="@id/janr"
        app:layout_constraintEnd_toStartOf="@id/rightBorder16"
        app:layout_constraintStart_toEndOf="@id/s_barrier"
        tools:text="Rock"/>

    <TextView
        android:id="@+id/strana"
        app:layout_constraintTag="s5"
        style="@style/track_properties_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/janr"
        app:layout_constraintStart_toEndOf="@id/leftBorder16"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Страна"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/country"
        style="@style/track_properties_text1"
        app:layout_constraintBaseline_toBaselineOf="@id/strana"
        app:layout_constraintEnd_toStartOf="@id/rightBorder16"
        app:layout_constraintStart_toEndOf="@id/s_barrier"
        tools:text="Великобритания" />




</androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>