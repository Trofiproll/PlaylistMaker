<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/backButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

    <ImageView
        android:id="@+id/cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/leftBorder24"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="82dp"
        app:layout_constraintDimensionRatio="h, 1:1"
        tools:srcCompat="@drawable/musiclogo"/>

    <TextView
        android:id="@+id/trackName"
        style="@style/search_song_name"
        android:textSize="24sp"
        tools:text="Yesterday (Remastered 2009)"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cover"
        app:layout_constraintStart_toStartOf="@id/leftBorder24"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/artistName"
        style="@style/search_song_name"
        android:textSize="14sp"
        tools:text="The Beatles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/trackName"
        app:layout_constraintStart_toStartOf="@id/leftBorder24"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:id="@+id/plus_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="51dp"
        android:layout_height="51dp"
        app:layout_constraintStart_toStartOf="@id/leftBorder24"
        app:layout_constraintEnd_toStartOf="@id/play_button"
        app:layout_constraintTop_toBottomOf="@id/artistName"
        android:layout_marginTop="54dp"
        app:srcCompat="@drawable/plus_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />

    <ImageButton
        android:id="@+id/play_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:layout_constraintStart_toEndOf="@id/plus_button"
        app:layout_constraintEnd_toStartOf="@id/like_button"
        app:layout_constraintTop_toBottomOf="@id/artistName"
        android:layout_marginTop="38dp"
        app:srcCompat="@drawable/play_button"
        />

    <ImageButton
        android:id="@+id/like_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="51dp"
        android:layout_height="51dp"
        app:layout_constraintStart_toEndOf="@id/play_button"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24"
        app:layout_constraintTop_toBottomOf="@id/artistName"
        android:layout_marginTop="54dp"
        app:srcCompat="@drawable/like_button"
        />

    <TextView
        android:id="@+id/cur_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/play_button"
        app:layout_constraintStart_toEndOf="@id/leftBorder24"
        app:layout_constraintEnd_toStartOf="@id/rightBorder24"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="0.5"
        tools:text="0:30"
        />

    <TextView
        android:id="@+id/dlitelnost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cur_time"
        app:layout_constraintStart_toEndOf="@id/leftBorder16"
        android:text="Длительность"/>
    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/dlitelnost"
        app:layout_constraintEnd_toStartOf="@id/rightBorder16"
        tools:text="5:35"/>

    <TextView
        android:id="@+id/albom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dlitelnost"
        app:layout_constraintStart_toEndOf="@id/leftBorder16"
        android:text="Альбом"/>
    <TextView
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/albom"
        app:layout_constraintEnd_toStartOf="@id/rightBorder16"
        tools:text="Yesterday (Remastered 2009)"/>

    <TextView
        android:id="@+id/god"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/albom"
        app:layout_constraintStart_toEndOf="@id/leftBorder16"
        android:text="Год"/>
    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/god"
        app:layout_constraintEnd_toStartOf="@id/rightBorder16"
        tools:text="1965"/>

    <TextView
        android:id="@+id/janr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/god"
        app:layout_constraintStart_toEndOf="@id/leftBorder16"
        android:text="Жанр"/>
    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/janr"
        app:layout_constraintEnd_toStartOf="@id/rightBorder16"
        tools:text="Rock"/>

    <TextView
        android:id="@+id/strana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/janr"
        app:layout_constraintStart_toEndOf="@id/leftBorder16"
        android:text="Страна"/>
    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/strana"
        app:layout_constraintEnd_toStartOf="@id/rightBorder16"
        tools:text="Великобритания"/>


</androidx.constraintlayout.widget.ConstraintLayout>