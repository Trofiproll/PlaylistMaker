<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_title_bar">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/menu_title_icon_padding"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/main_menu_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/menu_title_text_padding"/>
    </FrameLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_frame"
        android:paddingHorizontal="@dimen/main_layout_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:text="@string/dark_theme"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_menu_text"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_frame"
        android:paddingHorizontal="@dimen/main_layout_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:text="@string/share_app"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_menu_text"/>
        <ImageView
            android:layout_width="@dimen/menu_icon_width"
            android:layout_height="wrap_content"
            android:src="@drawable/share_icon"

            android:layout_gravity="center_vertical|end"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_frame"
        android:paddingHorizontal="@dimen/main_layout_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:text="@string/write_to_support"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_menu_text"/>
        <ImageView
            android:layout_width="@dimen/menu_icon_width"
            android:layout_height="wrap_content"
            android:src="@drawable/support_icon"
            android:layout_gravity="center_vertical|end"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_frame"
        android:paddingHorizontal="@dimen/main_layout_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:text="@string/terms_of_use"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_menu_text"/>
        <ImageView
            android:layout_width="@dimen/menu_icon_width"
            android:layout_height="wrap_content"
            android:src="@drawable/terms_icon"
            android:layout_gravity="center_vertical|end"/>
    </FrameLayout>

    
</LinearLayout>